#!jinja2
[cylc]
UTC mode=True
[[event hooks]]
timeout handler=rose suite-hook --shutdown
timeout=1

[scheduling]
[[dependencies]]
graph="""
my_task_1
{% if JOB_HOST is defined %}
my_task_2
{% endif %}
"""

[runtime]
[[root]]
script=true
[[my_task_1]]
{% if JOB_HOST is defined %}
[[my_task_2]]
[[[remote]]]
host={{JOB_HOST}}
{% endif %}
